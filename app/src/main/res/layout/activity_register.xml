<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/register_background"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/phone"/>

        <EditText
            android:id="@+id/name_text"
            android:textColor="#FAFAFA"
            android:layout_marginLeft="20dp"
            android:textColorHint="#FAFAFA"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="用户名"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#FFCCBC"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/smartphone" />
        <EditText
            android:textColor="#FAFAFA"
            android:layout_marginLeft="20dp"
            android:textColorHint="#FAFAFA"
            android:background="@null"
            android:inputType="phone"
            android:id="@+id/phone_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="手机号码"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#FFCCBC"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/school"/>

        <EditText
            android:id="@+id/school_text"
            android:textColor="#FAFAFA"
            android:layout_marginLeft="20dp"
            android:textColorHint="#FAFAFA"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="学校"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#FFCCBC"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/age"/>

        <EditText
            android:id="@+id/age_text"
            android:textColor="#FAFAFA"
            android:layout_marginLeft="20dp"
            android:textColorHint="#FAFAFA"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="年龄"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#FFCCBC"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sex"/>

        <EditText
            android:id="@+id/sex_text"
            android:textColor="#FAFAFA"
            android:layout_marginLeft="20dp"
            android:textColorHint="#FAFAFA"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="性别"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#FFCCBC"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/personality"/>

        <EditText
            android:id="@+id/personality_text"
            android:textColor="#FAFAFA"
            android:layout_marginLeft="20dp"
            android:textColorHint="#FAFAFA"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="个性签名"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#FFCCBC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lock"/>

        <EditText
            android:textColor="#FAFAFA"
            android:layout_marginLeft="20dp"
            android:textColorHint="#FAFAFA"
            android:background="@null"
            android:id="@+id/password_text"
            android:maxLength="12"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="49dp"
            android:hint="6-12位字母数字密码"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#FFCCBC"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lock"/>

        <EditText
            android:textColor="#FAFAFA"
            android:layout_marginLeft="20dp"
            android:textColorHint="#FAFAFA"
            android:background="@null"
            android:id="@+id/password_confirm_text"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:maxLength="12"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="确认密码"
        />
    </LinearLayout>

    <View
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#FFCCBC"/>

    <Button
        android:layout_marginLeft="30dp"
        android:id="@+id/next_button"
        android:layout_marginTop="15dp"
        android:textColor="#FAFAFA"
        android:background="@drawable/rect"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="下一步"/>
</LinearLayout>