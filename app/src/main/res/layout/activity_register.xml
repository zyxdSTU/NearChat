<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        app:contentInsetStart="0dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="#E53935"
        android:layout_height="?attr/actionBarSize" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_gravity="center"
                android:background="#E53935"
                android:id="@+id/back_button"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/back"/>
            <TextView
                android:layout_marginLeft="70dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号注册"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:background="@null"
            android:paddingLeft="30dp"
            android:inputType="phone"
            android:id="@+id/phone_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="手机号码"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/phone_text"
            android:background="#EEEEEE"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:background="@null"
            android:id="@+id/password_text"
            android:maxLength="12"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:paddingLeft="30dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="6-12位字母数字组合密码"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/password_text"
            android:background="#EEEEEE"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <EditText
        android:background="@null"
        android:id="@+id/password_confirm_text"
        android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
        android:maxLength="12"
        android:paddingLeft="30dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:hint="确认密码"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/password_confirm_text"
            android:background="#EEEEEE"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <EditText
                android:hint="短信验证码"
                android:background="@null"
                android:inputType="numberDecimal"
                android:paddingLeft="30dp"
                android:id="@+id/msg_verify_num_text"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="49dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/msg_verify_num_text"
                android:background="#EEEEEE"/>
        </RelativeLayout>

        <Button
            android:id="@+id/verify_button"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:text="验证"
            android:textSize="15sp"
            android:background="@drawable/rect"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="4"/>
        <Button
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/acquire_msg_button"
            android:background="@drawable/rect"
            android:textSize="15sp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="获取验证码"
            />
    </LinearLayout>

    <Button
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/register_button"
        android:background="@drawable/rect"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="注册"/>
</LinearLayout>