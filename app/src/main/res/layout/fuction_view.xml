<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_margin="8dp"
            android:background="#FAFAFA"
            android:scaleType="fitXY"
            android:src="@drawable/contacts_button"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageButton
            android:layout_margin="8dp"
            android:background="#FAFAFA"
            android:scaleType="fitXY"
            android:src="@drawable/place_button"
            android:id="@+id/map_button"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageButton
            android:layout_margin="8dp"
            android:background="#FAFAFA"
            android:scaleType="fitXY"
            android:src="@drawable/file_button"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_margin="8dp"
            android:background="#FAFAFA"
            android:scaleType="fitXY"
            android:src="@drawable/recycle_button"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageButton
            android:layout_margin="8dp"
            android:background="#FAFAFA"
            android:scaleType="fitXY"
            android:src="@drawable/heart_button"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageButton
            android:layout_margin="8dp"
            android:background="#FAFAFA"
            android:scaleType="fitXY"
            android:src="@drawable/settings_button"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_margin="8dp"
            android:background="#FAFAFA"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageButton
            android:id="@+id/power_button"
            android:layout_margin="8dp"
            android:background="#FAFAFA"
            android:scaleType="fitXY"
            android:src="@drawable/power_button"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageButton
            android:layout_margin="8dp"
            android:background="#FAFAFA"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@drawable/heart_button"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>
